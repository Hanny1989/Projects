    const cart = {};

   

    function formatPrice(amount) {
      return amount.toFixed(2).replace(".", ",") + " €";
    }

    function getCartItems() {
      return Object.values(cart);
    }

    function getDishById(id) {
      for (const category of categories) {
        const found = category.dishes.find((dish) => dish.id === id);
        if (found) return found;
      }
      return null;
    }



    function dishCardTemplate(categoryId, dish) {
      return `
        <article class="dish-card" data-category="${categoryId}">
          <div class="dish-text">
            <h3 class="dish-name">${dish.name}</h3>
            <p class="dish-description">${dish.description}</p>
            <div class="dish-meta">
              <span class="dish-tag">${dish.tag}</span>
            </div>
          </div>
          <div class="dish-actions">
            <div class="dish-price">${formatPrice(dish.price)}</div>
            <button class="add-button" data-add="${dish.id}" aria-label="Gericht hinzufügen">
              +
            </button>
          </div>
        </article>
      `;
    }

    function categorySectionTemplate(category) {
      const dishesHtml = category.dishes
        .map((dish) => dishCardTemplate(category.id, dish))
        .join("");
      return `
        <section id="${category.id}" class="menu-section">
          <div class="menu-section-header">
            <img src="${category.image}" alt="${category.name}" class="category-image" />
            <h2>${category.name}</h2>
          </div>
          <div class="dish-list">${dishesHtml}</div>
        </section>
      `;
    }

    function navButtonTemplate(category, isActive) {
      const activeClass = isActive ? "active" : "";
      return `
        <button class="${activeClass}" data-nav="${category.id}">
          ${category.name}
        </button>
      `;
    }

    function cartItemTemplate(item) {
      const { dish, quantity } = item;
      const lineTotal = dish.price * quantity;
      return `
        <div class="cart-item" data-item="${dish.id}">
          <div class="cart-qty-box">
            <button class="qty-button" data-action="dec" aria-label="Menge verringern">−</button>
            <span>${quantity}</span>
            <button class="qty-button" data-action="inc" aria-label="Menge erhöhen">+</button>
          </div>
          <div>
            <div class="cart-item-name">${dish.name}</div>
            <div class="cart-item-meta">
              Einzelpreis: ${formatPrice(dish.price)}
            </div>
          </div>
          <div class="cart-item-price">
            <button class="remove-button" data-action="remove" aria-label="Entfernen">✕</button>
            <div>${formatPrice(lineTotal)}</div>
          </div>
        </div>
      `;
    }

    function cartItemsHtml() {
      const items = getCartItems();
      if (!items.length) {
        return `
          <div class="cart-empty">
            Dein Warenkorb ist noch leer.<br />
            Füge ein Gericht hinzu, um zu starten.
          </div>
        `;
      }
      return items.map((item) => cartItemTemplate(item)).join("");
    }

  

    function renderMenu() {
      const menuEl = document.getElementById("menu");
      menuEl.innerHTML = categories
        .map((category) => categorySectionTemplate(category))
        .join("");
    }

    function renderNav() {
      const navEl = document.getElementById("dish-nav");
      navEl.innerHTML = categories
        .map((c, index) => navButtonTemplate(c, index === 0))
        .join("");
    }

    function getCartTotals() {
      const items = getCartItems();
      const subtotal = items.reduce(
        (sum, item) => sum + item.dish.price * item.quantity,
        0
      );
      const total = items.length ? subtotal + DELIVERY_COST : 0;
      const count = items.reduce((sum, item) => sum + item.quantity, 0);
      return { subtotal, total, count };
    }

    function renderDesktopCart() {
      const itemsEl = document.getElementById("cart-items-desktop");
      const countEl = document.getElementById("cart-count-desktop");
      const subtotalEl = document.getElementById("cart-subtotal-desktop");
      const deliveryEl = document.getElementById("cart-delivery-desktop");
      const totalEl = document.getElementById("cart-total-desktop");
      const orderBtn = document.getElementById("order-button-desktop");

      itemsEl.innerHTML = cartItemsHtml();
      const { subtotal, total, count } = getCartTotals();
      countEl.textContent =
        count === 1 ? "1 Artikel" : `${count} Artikel`;
      subtotalEl.textContent = formatPrice(subtotal);
      deliveryEl.textContent =
        subtotal === 0 ? formatPrice(0) : formatPrice(DELIVERY_COST);
      totalEl.textContent = formatPrice(total);
      orderBtn.disabled = total < MIN_ORDER_VALUE;
    }

    function renderMobileCart() {
      const itemsEl = document.getElementById("cart-items-mobile");
      const subtotalEl = document.getElementById("cart-subtotal-mobile");
      const deliveryEl = document.getElementById("cart-delivery-mobile");
      const totalEl = document.getElementById("cart-total-mobile");
      const orderBtn = document.getElementById("order-button-mobile");
      const toggleInfo = document.getElementById("cart-toggle-info");

      itemsEl.innerHTML = cartItemsHtml();
      const { subtotal, total, count } = getCartTotals();
      subtotalEl.textContent = formatPrice(subtotal);
      deliveryEl.textContent =
        subtotal === 0 ? formatPrice(0) : formatPrice(DELIVERY_COST);
      totalEl.textContent = formatPrice(total);
      orderBtn.disabled = total < MIN_ORDER_VALUE;

      const labelCount = count || 0;
      toggleInfo.textContent = `(${labelCount} · ${formatPrice(total)})`;
    }

    function renderCart() {
      renderDesktopCart();
      renderMobileCart();
    }

   

    function addToCart(dishId) {
      const dish = getDishById(dishId);
      if (!dish) return;
      if (!cart[dishId]) {
        cart[dishId] = { dish, quantity: 1 };
      } else {
        cart[dishId].quantity += 1;
      }
      renderCart();
    }

    function changeQuantity(dishId, delta) {
      const item = cart[dishId];
      if (!item) return;
      item.quantity += delta;
      if (item.quantity <= 0) {
        delete cart[dishId];
      }
      renderCart();
    }

    function removeFromCart(dishId) {
      if (cart[dishId]) {
        delete cart[dishId];
      }
      renderCart();
    }

    function clearCart() {
      for (const key of Object.keys(cart)) {
        delete cart[key];
      }
      renderCart();
    }

  

    function handleCartVisibilityOnScroll() {
      const cartEl = document.getElementById("cart-desktop");
      if (!cartEl) return;

      const scrollY = window.scrollY || window.pageYOffset;
      const doc = document.documentElement;
      const distanceToBottom =
        doc.scrollHeight - doc.clientHeight - scrollY;

      const isNearTop = scrollY < 80;
      const isNearBottom = distanceToBottom < 120;

      if (isNearTop || isNearBottom) {
        cartEl.classList.add("cart-hidden");
      } else {
        cartEl.classList.remove("cart-hidden");
      }
    }

  

    function showOrderMessage(targetId) {
      const messageEl = document.getElementById(targetId);
      if (!messageEl) return;
      messageEl.textContent =
        "Danke! Deine Testbestellung wurde erfolgreich aufgenommen.";
      setTimeout(() => {
        messageEl.textContent = "";
      }, 4000);
    }

    function handleOrder(isDesktop) {
      const { total } = getCartTotals();
      if (total < MIN_ORDER_VALUE) return;
      clearCart();
      const messageId = isDesktop
        ? "order-message-desktop"
        : "order-message-mobile";
      showOrderMessage(messageId);
    }

  
    function openCartDialog() {
      const backdrop = document.getElementById("cart-dialog-backdrop");
      backdrop.classList.add("open");
      backdrop.setAttribute("aria-hidden", "false");
    }

    function closeCartDialog() {
      const backdrop = document.getElementById("cart-dialog-backdrop");
      backdrop.classList.remove("open");
      backdrop.setAttribute("aria-hidden", "true");
    }

    function scrollToCategory(categoryId) {
      const section = document.getElementById(categoryId);
      if (!section) return;
      section.scrollIntoView({ behavior: "smooth" });
    }

    

    function setupMenuEvents() {
      const menuEl = document.getElementById("menu");
      menuEl.addEventListener("click", (event) => {
        const addBtn = event.target.closest("[data-add]");
        if (!addBtn) return;
        const dishId = addBtn.getAttribute("data-add");
        addToCart(dishId);
      });
    }

    function setupCartEvents() {
      const desktopItemsEl =
        document.getElementById("cart-items-desktop");
      const mobileItemsEl =
        document.getElementById("cart-items-mobile");

      [desktopItemsEl, mobileItemsEl].forEach((container) => {
        container.addEventListener("click", (event) => {
          const itemEl = event.target.closest("[data-item]");
          if (!itemEl) return;
          const dishId = itemEl.getAttribute("data-item");
          const action = event.target.getAttribute("data-action");

          if (action === "inc") {
            changeQuantity(dishId, 1);
          } else if (action === "dec") {
            changeQuantity(dishId, -1);
          } else if (action === "remove") {
            removeFromCart(dishId);
          }
        });
      });

      const orderDesktop =
        document.getElementById("order-button-desktop");
      const orderMobile =
        document.getElementById("order-button-mobile");

      orderDesktop.addEventListener("click", () =>
        handleOrder(true)
      );
      orderMobile.addEventListener("click", () =>
        handleOrder(false)
      );
    }

    function setupNavEvents() {
      const navEl = document.getElementById("dish-nav");
      navEl.addEventListener("click", (event) => {
        const btn = event.target.closest("[data-nav]");
        if (!btn) return;
        const id = btn.getAttribute("data-nav");
        scrollToCategory(id);

        navEl
          .querySelectorAll("button")
          .forEach((b) => b.classList.remove("active"));
        btn.classList.add("active");
      });
    }

    function setupResponsiveCartEvents() {
      const toggleBtn = document.getElementById("cart-toggle");
      const backdrop = document.getElementById("cart-dialog-backdrop");
      const closeBtn = document.getElementById("cart-dialog-close");

      toggleBtn.addEventListener("click", openCartDialog);
      closeBtn.addEventListener("click", closeCartDialog);

      backdrop.addEventListener("click", (event) => {
        if (event.target === backdrop) {
          closeCartDialog();
        }
      });
    }

    function setupScrollEvents() {
      handleCartVisibilityOnScroll();
      window.addEventListener("scroll", handleCartVisibilityOnScroll);
      window.addEventListener("resize", handleCartVisibilityOnScroll);
    }

    // ---------- Init ----------

    function initApp() {
      renderMenu();
      renderNav();
      renderCart();
      setupMenuEvents();
      setupCartEvents();
      setupNavEvents();
      setupResponsiveCartEvents();
      setupScrollEvents();
    }

    document.addEventListener("DOMContentLoaded", initApp);
 
</script>

</body>
</html>
